{
  "include": ["./src", "*.d.ts", "*.ts"],
  "rootDir": "./src",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  }
}
