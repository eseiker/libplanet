{
  "$schema": "https://github.com/rome/tools/raw/cli/v11.0.0/npm/rome/configuration_schema.json",
  "files": {
    "ignore": [
      "./Libplanet/**/*",
      "./Libplanet.*/**/*",
      "./@planetarium/*/dist/**/*",
      "./@planetarium/*/coverage/**/*",
      "./.pnp.*",
      "./**/*/crypto/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "recommended": true,
        "useTemplate": "off"
      },
      "correctness": {
        "recommended": true,
        "noUnnecessaryContinue": "off"
      }
    }
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "space"
  }
}
